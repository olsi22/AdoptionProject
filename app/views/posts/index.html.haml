- if user_signed_in?
	%p#intro
		Welcome
		= current_user.name
		%br/
		%span
			Let's help our best friends a home
- else
	%p#intro
		For a better world
		%br/
		%span
		Help them to find a new home
#posts
	- @posts.each do |post|
		.post
			.post_image
				= link_to (image_tag post.image.url(:small)), post
			.post_content
				.title
					%h2= link_to post.title, post
				.data.clearfix
					%p.username
						Shared by
						= post.user.name
					%p.buttons
						%span
							%i.fa.fa-comments-o
							= post.comments.count
  